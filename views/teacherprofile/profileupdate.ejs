<!DOCTYPE html>
<html>
  <head>
	<!--Import Google Icon Font-->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
       <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>

  <style type="text/css">
	
	nav{
		padding-left: 300px;
	}
	.content{
		padding-left: 300px;
		height:100%;
	}

	.card-bg{
		background: rgba(0,0,0,0);
	}

	@media only screen and (max-width: 992px){
		.content,nav{
			padding-left: 0;
		}
	}
	</style>


  <body>

	<script type="text/javascript">
		$(document).ready(function(){
			$('.sidenav').sidenav();
		});
	</script>

	<!-- navbar -->
	<div class="navbar-fixed">
		<nav>
			<div class="nav-wrapper blue">
				<a href="#" class="brand-logo center">Teacher Profile</a>

				<ul id="nav-mobile" class="right hide-on-med-and-down">
					<li><a href="/home1"><i class="material-icons">subdirectory_arrow_left</i></a></li>
				  </ul>
				<a href="" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>		
			</div>
		</nav>
		</div>
		<ul class="sidenav sidenav-fixed bg" id="slide-out">
			<li>
				<div class="user-view">
					<div class="background">
						<img src="" width="100%">
					</div>
					<a href="#"><img src="https://firebasestorage.googleapis.com/v0/b/halogen-parser-145219.appspot.com/o/elearning.png?alt=media&token=76fa0688-7096-427f-be14-fa530809f80e" class="circle"></a>
					
				</div>	
			</li>
			<li><a href="/teacherprofile/<%= teacher[0].tid %>" class="grey-text"><i class="material-icons">airplay</i>Profile Information</a></li>
			<li><a href="/profileupdate/<%= teacher[0].tid %>" class="grey-text"><i class="material-icons">book</i>Profile Update</a></li>
			
		</ul>


		<!-- content -->

		<div class="content bg">
		<div class="container">
		<div class="row">
			<div class="col s12">
				<h4 class="grey-text"> </h4>
			</div>
			<div class="col s12 m6 l12">
				<div class="card card-bg grey-text">
					<div class="card-content ">                        
                        
                        <h5>Edit Profile:</h5>
                        <form method="post">
                            <div class="row">
                                <div class="input-field col s12">
                                <input id="teacher_name" type="text" class="validate" name="tname" value="<%= teacher[0].tname %>">
                                <label for="teacher_name"> Name </label>
                                </div>

                                <div class="input-field col s12">
                                    <input id="teacher_email" type="text" class="validate" name="temail" value="<%= teacher[0].temail %>">
                                    <label for="teacher_email">Email</label>
                                </div>

                                <div class="input-field col s12">
                                    <input id="teacher_mobile" type="text" class="validate" name="tmobile" value="<%= teacher[0].tmobile %>">
                                    <label for="teacher_mobile">Mobile No</label>
                                </div>

                                <div class="input-field col s12">
                                    <input id="teacher_mobile" type="password" class="validate" name="tpassword" value="<%= teacher[0].tpassword %>">
                                    <label for="teacher_mobile">Password</label>
                                </div>

                            </div>
                            <input type="submit" name="" class="waves-effect waves-light grey btn" value="Update">
						</form>
					</div>
				</div>
			</div>
			
		</div>
	</div>
	</div>

	
  </body>
</html>