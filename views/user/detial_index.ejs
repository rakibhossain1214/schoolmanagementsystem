<!DOCTYPE html>
<html>
<head>
<title>Course View</title>
	<style>
		body{
			background:url('Background.jpg');
			background-size:fullscreen;
			background-repeat:no-repeat;
			margin:0;
			padding:0;
			font-family:Arial;
		}
		.profile-view{
			margin:auto;
			width:800px;
			box-shadow:0px 8px 16px 0px rgba(0,0,0,0.9);
			padding:10px 40px;
			margin-top:25px;
			background:#F1F1F9;
			background:linear-gradient(top, #3c3c3c 0%, #222222 100%);
		}
		input[type=submit]{
			border:none;
			outline:none;
			padding:10px;
			color:#fff;
			font-size:16px;
			font-family:Arial;
			background:#ff267e;
			cursor:pointer;
			border-radius:20px;
		}
		input[type=submit]:hover{
			background:#efed40;
			color:#262626;
		}
		a{
			border:none;
			outline:none;
			padding:10px;
			color:#fff;
			font-size:16px;
			font-family:Arial;
			background:#ff267e;
			cursor:pointer;
			border-radius:20px;
		}
	</style>
</head>

<body>
	
	<div class="profile-view">
		<form  method="post">
			<div class="top-view" align="left">
				<table>
				<tr>
					<th></th>
					<th></th>
				</tr>
				<tr>
					<td><img src="versity_logo.jpg"></td>
					<td><h2 style="color: #6C19A3;" >School managment <br/> </h2>
					</td>
				</tr>
				</table>
				<hr/>
			</div>
			
			<div class="user-info" align="left">
				<table style="width: 100%; border:1px; border-collapse: collapse;">
					<tr>
						<th style="background-color: #4CAF50; color: white; text-align: left;
							padding: 8px;"><h4 align="center"><h4 align="center">ID</h4></th>
						<th style="background-color: #4CAF50; color: white; text-align: left;
							padding: 8px;"><h4 align="center"><h4 align="center">User ID</h4></th>
						<th style="background-color: #4CAF50; color: white; text-align: left;
							padding: 8px;"><h4 align="center"><h4 align="center">User Name</h4></th>
						<th style="background-color: #4CAF50; color: white; text-align: left;
							padding: 8px;"><h4 align="center"><h4 align="center">Address</h4></th>
						<th style="background-color: #4CAF50; color: white; text-align: left;
							padding: 8px;"><h4 align="center"><h4 align="center">Email</h4></th>
						<th style="background-color: #4CAF50; color: white; text-align: left;
							padding: 8px;"><h4 align="center"><h4 align="center">Action</h4></th>
						<th style="background-color: #4CAF50; color: white; text-align: left;
							padding: 8px;"><h4 align="center"><h4 align="center">Action</h4></th>
					</tr>
					<% for(var i=0; i < user.length; i++){ %>
							<tr>
							<td style='text-align: center;padding: 8px;'> <%= user[i].id %> </td>
							<td style='text-align: center;padding: 8px;'> <%= user[i].user_id %> </td>
							<td style='text-align: center;padding: 8px;'> <%= user[i].first_name+ " "+user[i].last_name %> </td>
							<td style='text-align: center;padding: 8px;'> <%= user[i].address %> </td>
							<td style='text-align: center;padding: 8px;'> <%= user[i].email %> </td>
							<td style='text-align: center;padding: 8px;'> <a href="/user/edituser/<%= user[i].user_id %>"> Edit </a> </td>
							<td style='text-align: center;padding: 8px;'> <a href="/user/deleteuser/<%= user[i].user_id %>"> Delete </a> </td>
							</tr>
					<% } %>
				</table>
				<hr/>
			</div>
			<br>
			
			<div align="center">
				<a href="/home">back</a>
				<br>
				<br>
			</div>
		
		</form>
	</div>

</body>